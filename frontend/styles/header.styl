.header
  position relative
  width 100%
  height auto
  background linear-gradient(to top, #5DDDD3 0%, #5ae4c4 36%, #48e4a0 100%)
  &-top
    height auto
    padding 27px 42px
    .header_nav
      float right
      width auto
      padding 35px 20px
      &__item
        margin 0 12px
        padding 7px 0
        font-size 16px
        color #fff
        letter-spacing 1.2px
        text-transform uppercase
        text-decoration none
        border-bottom 1px solid transparent
        transition-duration time_trans
        &:hover
          border-color #fff
    .mob-menu-icon
      display none
  &_title
    margin-top 50px
    padding 10px 10px 35px 10px
    font-weight 100
    font-size 61px
    line-height 65px
    letter-spacing 6px
    text-align right
    color #FFFFFF
    border-bottom 1px solid rgba(255,255,255,0.52)
    opacity .98
.banner
  position relative
  display flex
  flex-direction row
  justify-content center
  padding 20px 0 100px
  animation bounceInUp 1s
  &_content
    display flex
    justify-content center
    flex-direction column
    max-width 500px
    margin-right 100px
    &__text
      margin-bottom 25px
      padding 10px 35px
      font-weight 100
      font-size 14px
      letter-spacing 1.2px
      line-height 20px
      color #FFFFFF
    &__btn
      display inline-block
      width 200px
      margin 10px 15px
      padding 11px 10px
      box-sizing border-box
      font-size 19px
      text-align center
      color #fff
      text-transform uppercase
      text-decoration none
      border-top 1px solid rgba(255,255,255,0.84)
      border-bottom 1px solid rgba(255,255,255,0.84)
      border-radius 15px
      box-shadow 0 1px 0 darken(c_turquoise,10%)
      transition-duration time_trans
      &--free
        float right
      &:hover
        background-color #fff
        color darken(c_turquoise,30%)
        border-color #fff
  &__img
    max-width 325px
    width 100%
@media all and (min-width: 1000px)
  .header
    &_title
      width 70%
      margin-left 15%
@media all and (max-width: 920px)
  .banner_content__btn
    padding 15px 30px
    margin 25px 15px
    width auto
@media all and (min-width: 790px)
  .header-top
      .header_nav
        display block
  .banner_content__btn-wrap
    display flex
    flex-direction row
    justify-content end
@media all and (max-width: 789px)
  .banner
    display flex
    flex-direction column
    justify-content space-around
    width 100%
    &_content
      width 100%
      margin-right 0
      max-width 100%
      &__btn
        &-wrap
          display flex
          justify-content center
          flex-direction row
      &__title
        text-align center
        font-size 50px
      &__text
        text-align center
    &__img-wrap
      display flex
      justify-content center
      margin-bottom 30px
  .header
    &-top
      padding 20px 24px
      .header_logo__img
        position: absolute
        top 0
        left 0
      .header_nav
        position absolute
        left 0
        top 80px
        z-index 4
        display none
        justify-content center
        flex-direction column
        width 100%
        padding 10px 0
        box-sizing content-box
        text-align center
        background rgba(38, 56, 45, 0.74)
        &__item
          padding 10px 10px
    .mob-menu-icon
      position absolute
      top 25px
      right 25px
      display block
      width 30px
      height 30px
      background rgba(30, 125, 117, 0.66)
      &:active ~.header_nav
        display flex!important
    &_title
      font-size 55px
@media all and (max-width: 465px)
  .banner_content__btn
    margin 10px 20px
    &-wrap
      flex-direction column
      max-width 300px
      margin: 0 auto



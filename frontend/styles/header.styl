.header
  position relative
  width 100%
  height auto
  background linear-gradient(to top, #5DDDD3 0%, #5ae4c4 36%, #48e4a0 100%)
  &-top
    height auto
    padding 27px 42px
    .header_nav
      float right
      width auto
      padding 35px 20px
      &__item
        margin 0 7px
        padding 7px 0
        font-size 16px
        color #fff
        text-transform uppercase
        text-decoration none
        &:hover
          border-bottom 1px solid
    .mob-menu-icon
      display none
.banner
  position relative
  display flex
  flex-direction row
  justify-content space-around
  padding 100px 0 100px
  animation bounceInUp 1s
  &_content
    max-width 460px
    margin-right 60px
    &__title
      padding 10px
      font-weight 700
      font-size 61px
      line-height 66px
      text-align right
      color #FFFFFF
      opacity .98
    &__text
      padding 10px
      font-weight 700
      font-size 14px
      line-height 20px
      color #FFFFFF
    &__btn
      display inline-block
      width 200px
      margin 25px 15px
      padding 15px 10px
      box-sizing border-box
      font-size 18px
      text-align center
      color #EAEDF1
      text-transform uppercase
      text-decoration none
      border 1px solid
      transition all 1s ease
      &--free
        float right
      &:hover
        background-color #EAEDF1
        color #5DDDD3
        border none
  &__img
    max-width 400px
    width 100%
@media all and (max-width: 920px)
  .banner_content__btn
    padding 15px 10px
    margin 25px 15px
    width auto
@media all and (min-width: 790px)
  .header-top
      .header_nav
        display block
  .banner_content__btn-wrap
    display flex
    flex-direction row
    justify-content flex-end
@media all and (max-width: 789px)
  .banner
    display flex
    flex-direction column
    justify-content space-around
    width 100%
    &_content
      width 100%
      margin-right 0
      max-width 100%
      &__btn
        &-wrap
          display flex
          justify-content center
          flex-direction row
      &__title
        text-align center
        font-size 50px
      &__text
        text-align center
    &__img-wrap
      display flex
      justify-content center
      margin-bottom 30px
  .header-top
    padding 20px 24px
    .header_logo__img
      position: absolute
      top 0
      left 0
    .header_nav
      position absolute
      left 0
      top 80px
      z-index 4
      display none
      justify-content center
      flex-direction column
      width 100%
      padding 10px 0
      box-sizing content-box
      text-align center
      background rgba(38, 56, 45, 0.74)
      &__item
        padding 10px 10px
    .mob-menu-icon
      position absolute
      top 25px
      right 25px
      display block
      width 30px
      height 30px
      background rgba(30, 125, 117, 0.66)
      &:active ~.header_nav
        display flex!important
@media all and (max-width: 370px)
  .banner_content__btn
    margin 10px 20px
    &-wrap
      flex-direction column
      max-width 300px
      margin: 0 auto



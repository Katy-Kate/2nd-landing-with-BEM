.support
  padding 90px 10px
  &_title
    font-weight 900
    font-size 36px
    line-height 66px
    text-align center
    color #222323
    opacity 0.76
  &_description
    margin-bottom 40px
    font-weight 200
    font-size 20px
    line-height 50px
    text-align center
    color #000000
    opacity 0.8
  &_form
    display flex
    flex-direction column
    justify-content center
    max-width 400px
    margin 0 auto
    &__input
      width 100%
      margin-bottom 30px
      padding 15px
      box-sizing border-box
      border 1px solid
      &--textarea
        height 90px
    &__btn-submit
      width 160px
      margin: 10px auto
      padding 15px 6%
      font-size 18px
      color rgba(25, 145, 161, 1)
      text-align center
      text-transform uppercase
      text-decoration none
      border 1px solid
      transition all 1s ease
      &:hover
        color #fff
        background rgba(25, 145, 161, 1)
        border none


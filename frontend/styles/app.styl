.app
  position relative
  width 100%
  height auto
  padding 100px 10px 100px
  box-sizing border-box
  &_title
    font-weight 900
    font-size 36px
    line-height 66px
    color  #222323
    text-align center
    opacity 0.76
  &_item
    width 300px
    padding 70px 4%
    box-sizing border-box
    &-wrap
      display flex
      flex-direction row
      justify-content center
    &__img
      display block
      margin 0 auto
    &__text
      font-weight 200
      font-size 18px
      line-height 25px
      color #000000
  &__img-wrap
    width 120px
    height 120px
    margin 0 auto 40px
    border-radius 50%
    &--blue
      background #1A91A1
    &--turquoise
      background #5DDDD3
  &__btn-wrap
    display flex
    justify-content center
    flex-direction row
    padding-top 70px
  &__btn
    margin: 10px 20px
    padding 5px 6%
    font-size 18px
    line-height 52.47
    text-align center
    color rgba(25, 145, 161, 1)
    text-transform uppercase
    text-decoration none
    border 1px solid
    transition all 1s ease
    &:hover
      color #fff
      background rgba(25, 145, 161, 1)
      border none
@media all and (max-width: 789px)

  .app_item
    width 100%
    padding 40px 0
    &__text
      padding 0 15%
    &-wrap
      display block
@media all and (max-width: 568px)
  .app__btn-wrap
    flex-direction column
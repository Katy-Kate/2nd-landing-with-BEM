.advantages
  padding 80px 10px
  &_title
    margin 20px 10px
    font-weight 900
    font-size 36px
    line-height 66px
    text-align center
    color #222323
    opacity 0.76
  &_item
    display flex
    max-width 750px
    margin 0 auto 40px
    &__text
      padding-top 20px
    &__img
      position relative
      top 2px
      left 2px
      width 65px
      height 65px
      margin-right 60px
      &-wrap
        float left
        width 65px
        height 65px
        padding 10px
        box-sizing border-box
        border-radius 50%
        margin-right 40px
  &__btn
    display block
    max-width 320px
    margin: 10px auto
    padding 15px 5px
    font-size 18px
    text-align center
    color rgba(25, 145, 161, 1)
    text-transform uppercase
    text-decoration none
    border 1px solid
    transition-duration time_trans
    &:hover
      color #fff
      background rgba(25, 145, 161, 1)
      border none

@media all and (max-width: 789px)
  .advantages
    padding 80px 15%
    &_item__text
      padding-top 5px




